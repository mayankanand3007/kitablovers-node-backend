{
    "swagger": "1.0",
    "openapi": "3.0.0",
    "info": {
        "title": "Kitab Lovers Ecommerce App",
        "description": "API Docs for Kitab Lovers Ecommerce App",
        "version": "1.0.0"
    },
    "host": "localhost:4000",
    "basePath": "/api/",
    "paths": {
        "/BooksInventory": {
            "get": {
              "tags": ["BooksInventory"],
              "summary": "Get All Books' Inventories",
              "responses": {
                "200": {
                  "description": "OK",
                  "schema": {
                    "$ref": "#/definitions/BooksInventories"
                  }
                }
              }
            },
            "post": {
                "tags": ["BooksInventory"],
                "description": "Add a single Books' Inventory",
                "parameters": [
                  {
                    "name": "user",
                    "in": "body",
                    "description": "User that we want to create",
                    "schema": {
                      "$ref": "#/definitions/BooksInventory"
                    }
                  }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                    "description": "New user is created",
                    "schema": {
                        "$ref": "#/definitions/BooksInventory"
                        }
                    }
                }
            }
          }
        },
        "definitions": {
            "BooksInventory": {
              "required": ["isbn", "mrp", "pricing", "inventory"],
              "properties": {
                "isbn": {
                  "type": "integer",
                  "uniqueItems": true
                },
                "mrp": {
                  "type": "integer"
                },
                "pricing": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                        "book_condition": {
                            "type": "string"
                        },
                        "price": {
                            "type": "integer"
                        }
                    }
                  }
                },
                "inventory": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                          "book_condition": {
                              "type": "string"
                          },
                          "city": {
                              "type": "string"
                          },
                          "quantity": {
                            "type": "integer"
                          },
                          "location": {
                            "type": "string"
                          }
                      }
                    }
                  },
                "books": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "amount": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            },
            "BooksInventories": {
              "type": "array",
              "$ref": "#/definitions/BooksInventory"
            }
          },
    "tags": [
      {
        "name": "BooksInventory",
        "description": "API for Books Inventory in the system"
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"]
  }

  